<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LMS_Clone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LMS_Clone.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="container-fluid mb-4">
            <nav class="navbar navbar-expand navbar-primary navbar-dark bg-success">
                <div class="d-flex justify-content-between align-items-center w-100">
                    <ul class="navbar-nav">
                        <li>
                            <a asp-controller="Home" asp-action="Index" class="navbar-brand">LMS</a>
                        </li>
                        @if (User.IsInRole(StaticData.Role_Admin)) {
                            <li class="nav-item ml-5">
                                <a asp-controller="Admin" asp-action="Index" class="btn btn-primary">Content Management</a>
                            </li>

                        }

                        @if (User.IsInRole(StaticData.Role_Student)) {
                            <li class="nav-item ml-5">
                                <a asp-controller="Profile" asp-action="Index" class="btn btn-primary">My Courses</a>
                            </li>
                        }
                    </ul>
                    <div>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </div>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
