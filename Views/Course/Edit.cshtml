@model Course
<h1>Edit Course</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group">
                    <label asp-for="CourseID">Course ID</label>
                    <input asp-for="CourseID" class="form-control" maxlength="100" disabled>
                </div>
                <div class="form-group">
                    <label asp-for="Title">Title:</label>
                    <input asp-for="Title" type="text" id="Title" name="Title" class="form-control" maxlength="100" required>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description:</label>
                    <textarea asp-for="Description" class="form-control" required maxlength="500"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="Category">Category:</label>
                    <input asp-for="Category" class="form-control" required>
                </div>
                <div class="form-group">
                    <label asp-for="ImageURL">Image URL:</label>
                    <input asp-for="ImageURL" class="form-control" required maxlength="200">
                </div>
                <div class="row">
                    <div class="col-3">
                        <div class="form-group text-center">
                            <input type="submit" value="Edit Course" class="btn btn-primary">
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="form-group text-center">
                            <a asp-controller="Course" asp-action="Index" class="btn btn-primary">Back to Courses</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



