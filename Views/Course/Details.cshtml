@model Course
<div class="container">
    <div class="row">
        <div class="col-3">
            @{var imageData = Model.Image != null
                                          ? Convert.ToBase64String(Model.Image)
                                          : null;
            }
            @if (!string.IsNullOrEmpty(imageData)) {
                <img src="data:image/jpeg;base64,@imageData" alt="Image" class="card-img-top">
            }
            else {
                <p>No image available</p>
            }
        </div>
        <div class="col-6">
            <p>@Model.Description</p>
        </div>

        @if (User.IsInRole(StaticData.Role_Student)) {
            <div class="col-3">
                <a asp-controller="course" asp-action="enroll" asp-route-id="@Model.CourseId" class="btn btn-success btn-lg">Enroll Now!</a>
            </div>
        }


    </div>
    <div class="row m-3">
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Lessons</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Assignments</button>
            </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                <a asp-controller="Lesson" asp-action="Create" asp-route-courseId="@Model.CourseId" class="btn btn-primary">Create New Lesson</a>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in ViewBag.Lessons) {
                            <tr>
                                <th scope="row">1</th>
                                <td>@obj.Name</td>
                                <td>Otto</td>

                            </tr>
                        }


                    </tbody>
                </table>

            </div>
            <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                <a asp-controller="Assignment" asp-action="Create" class="btn btn-primary">Create New Lesson</a>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">First</th>
                            <th scope="col">Last</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>Mark</td>
                            <td>Otto</td>

                        </tr>

                    </tbody>
                </table>


            </div>
        </div>
    </div>
    


</div>