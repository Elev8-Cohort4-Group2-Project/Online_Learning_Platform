@model List<Course>


    <h2>Course List</h2>

<div class="row mb-3">
    <div class="col-8">
    </div>
    <div class="col-4">
        <a asp-controller="Course" asp-action="Create" class="btn btn-primary">Create New Course</a>
    </div>
</div>



<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Course ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model) {
                <tr>
                    <td>@obj.CourseID</td>
                    <td>@obj.Title</td>
                    <td>@obj.Description</td>
                    <td>@obj.Category</td>
                    <td>
                        <a asp-controller="Course" asp-action="Details" asp-route-id="@obj.CourseID" class="btn btn-warning">Details</a>
                        <a asp-controller="Course" asp-action="Edit" asp-route-id ="@obj.CourseID" class="btn btn-primary">Edit</a>
                        <a asp-controller="Course" asp-action="Delete" asp-route-id="@obj.CourseID" class="btn btn-danger">Delete</a>
                    </td>
                </tr>

            }

        </tbody>
    </table>

</div>

