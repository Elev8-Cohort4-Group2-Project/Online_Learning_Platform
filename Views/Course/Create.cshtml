@model Course
<h1>Create a New Course</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Title">Title:</label>
                    <input asp-for="Title" type="text" id="Title" name="Title" class="form-control" maxlength="100" required>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description:</label>
                    <textarea asp-for="Description" class="form-control" required maxlength="500"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="Category">Category:</label>
                    <input asp-for="Category" class="form-control" required>
                </div>
                <div class="form-group">
                    <label asp-for="ImageURL">Image URL:</label>
                    <input asp-for="ImageURL" class="form-control" required maxlength="200">
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Create Course" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</div>



