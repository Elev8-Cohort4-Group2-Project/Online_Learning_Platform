    .card-img-custom {
        max-height: 200px; 
        width: auto; 
    }
</style>
@model List<Course>

@{
    ViewData["Title"] = "Home Page";
}

<style>

    .card-img-custom {
        max-height: 200px; 
        width: auto; 
    }
</style>

<div class="container">
    <div class="row">

        @foreach (var item in Model) {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@item.ImageURL" class="card-img-top card-img-custom" alt="Image Description">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Description</p>
                        <a asp-controller="Course" asp-action="Details" asp-route-id="@item.CourseID" class="btn btn-primary">Learn More</a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>