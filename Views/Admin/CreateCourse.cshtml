@model Course
<div class="container">
    <h1>Create a New Course</h1>
    <form action="/Courses/Create" method="post">
        <!-- Update the action attribute with your actual endpoint -->
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" name="Title" maxlength="100" required>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" name="Description" rows="4" maxlength="500" required></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Category"></label>
            <input asp-for="Category" class="form-control" name="Category" maxlength="50" required>
        </div>

        <div class="form-group">
            <label asp-for="ImageURL"></label>
            <input asp-for="ImageURL" class="form-control" name="ImageURL" maxlength="200">
        </div>


        <!-- You will need to handle the Instructor selection based on your application logic -->
        <div class="form-group">
            <label for="InstructorID">Instructor:</label>
            <select class="form-control" name="InstructorID">
                <!-- Populate this select with instructors from your database -->
                <!-- Example: <option value="1">Instructor 1</option> -->
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Create Course</button>
    </form>
</div>